    "installer": {
        "script": [
            "if (is_admin) {",
            "    if ([System.Environment]::OSVersion.Version -lt [version]::new(10,0)) { error \"$app requires Windows 10 (or above)\"; break }",
            "    Start-Process msiexec -ArgumentList @('/i', \"`\"$dir\\setup.msi_`\"\", '/qn', '/norestart') -Wait -Verb RunAs | Out-Null",
            "break",
            "}",
            "elif (Get-Command gsudo){",
            "    if ([System.Environment]::OSVersion.Version -lt [version]::new(10,0)) { error \"$app requires Windows 10 (or above)\"; break }",
            "    Start-Process gsudo -ArgumentList @('msiexec' ,'/i', \"`\"$dir\\setup.msi_`\"\", '/qn', '/norestart') -Wait -Verb RunAs | Out-Null",
            "break",
            "}",
            "else {",
            "    error \"$app requires admin rights to $cmd\"; break",
            "}"
        ]
    },
    "uninstaller": {
        "script": [
            "if (is_admin) {",
            "Start-Process msiexec -ArgumentList @('/x', \"`\"$dir\\setup.msi_`\"\", '/qn', '/norestart') -Wait -Verb RunAs | Out-Null",
            "break",
            "}",
            "elif (Get-Command gsudo){",
            "Start-Process  -ArgumentList @('msiexec','/x', \"`\"$dir\\setup.msi_`\"\", '/qn', '/norestart') -Wait -Verb RunAs | Out-Null",
            "break",
            "}",
            "else {",
            "    error \"$app requires admin rights to $cmd\"; break",
            "}"
        ]
    },
    "checkver": {
